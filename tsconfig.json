{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ES2015"],

    /* Modules */
    "module": "es2020",
    // "rootDir": "./",
    "moduleResolution": "node",
    // "baseUrl": "./",
    // "paths": {},

    /* Emit */
    "sourceMap": true,
    //"outDir": "./JS",
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "alwaysStrict": true,

    /* Completeness */
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["public/scripts", "public/mcu-simulator/scripts", "public/planetary-orbit-simulator/scripts"]
}
